#!/bin/bash
########################################################################
#
# imageshrink
# Verkleinert alle Bilder im aktuellen Verzeichnis
#
# TODO:
# - Fotos als Parameter
# - Aufl√∂sung als Parameter
#
########################################################################

########################################################################
# Variabeln
COUNT=0
TOTAL=`echo *.[Jj][Pp][Gg] | wc -w`

# Optionen
FOLDER="small"
SIZE="800x600"
SIZE="x1024"
SIZE="2048x2048"
SIZE="1024x1024"
SIZE="1280x1280"
QUALITY="75"

########################################################################
# Main

mkdir "$FOLDER"

for datei in *.[Jj][Pp][Gg]
do
  COUNT="`expr $COUNT + 1`"
  echo "$datei: Foto $COUNT von $TOTAL (`expr 100 \* $COUNT / $TOTAL`%)"
  convert -resize "$SIZE" -quality "$QUALITY" "$datei" "small/$datei" 
done

# EOF
